<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Artifacts</title>
    @entryPointStyles('app')
</head>
<body>
    <h1>Artifacts</h1>

    <ul class="card-list">
        @each(artifact in artifacts)
        <li class="card">
            <a class="card-image" href="/artifacts/{{ artifact.id }}">
                <img loading="lazy" src="{{ artifact.thumbnailUri }}" alt="{{ artifact.title }}">
            </a>
                <h2>Author</h2>
                <p>{{ artifact.title }}</p>
            </a>
        </li>
        @end
    </ul>


</body>
</html>